#include <iostream>
using namespace std;

void ReadGrades(float grades[3])
{
	cout << "please enter grade1 : \n";
	cin >> grades[0];

	cout << "please enter grade2 : \n";
	cin >> grades[1];

	cout << "please enter grade3 : \n";
	cin >> grades[2];
}

float avragefun(float grades[3])
{
	return (grades[0] + grades[1] + grades[2]) / 3;

}


int main()
{
	float grades[3];
	ReadGrades(grades);
	cout << "The avreage of grades is :" << avragefun(grades) << endl;
	return 0;
}
